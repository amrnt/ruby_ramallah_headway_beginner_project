<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Published:</b>
  <%= @post.published %>
</p>

<p>
  <b>Comment Count:</b>
  <%= @post.comments.count %>
</p>

<p>
  <b>Tags:</b>
  <% @post.tags.each do |tag| %>
    <%= content_tag_for(:span, tag) do %>
      <%= tag.name %>, 
    <% end %>
  <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
