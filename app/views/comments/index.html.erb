<h1>Comments for: <%= @post.title %></h1>

<ul>
<% @comments.each do |comment| %>
  <%= content_tag_for(:li, comment) do %>
    <%= comment.author %>: <%= comment.msg %>
  <% end %>
<% end %>
</ul>

<hr />

<%= form_for([@post, Comment.new]) do |f| %>

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :msg %><br />
    <%= f.text_area :msg %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



